<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Minimumblue">

    <FrameLayout
        android:id="@+id/framepengumumandetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/DarkGrey"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" >
        </androidx.appcompat.widget.Toolbar>


        <androidx.cardview.widget.CardView
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:cardCornerRadius="20dp"
            android:layout_margin="14dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="6dp"
                app:srcCompat="@drawable/baseline_arrow_back_24"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="370sp"
            android:layout_height="112dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="21dp">

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Jadwal Sidang Proposal"
                android:textColor="@color/RoyalBlue"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="322sp"
                android:layout_height="40dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jadwal Tidak Tersedia!"
                    android:fontFamily="@font/poppinseegular"
                    android:alpha="0.5"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="78dp">
                </TextView>

            </androidx.cardview.widget.CardView>


            
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Sidang Proposal"
            android:textColor="@color/White"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Download Jadwal"
            android:textSize="14sp"
            android:layout_marginTop="206dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/RoyalBlue"
            app:cornerRadius="8dp"
            android:layout_marginBottom="8dp"/>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>