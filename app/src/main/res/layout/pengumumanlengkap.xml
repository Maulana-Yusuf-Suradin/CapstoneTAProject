    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Minimumblue">

    <androidx.cardview.widget.CardView
        android:id="@+id/carddetailpengumuman"
        android:layout_width="360dp"
        android:layout_height="730dp"
        android:background="@color/Minimumblue"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:contentPadding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:padding="16dp">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/picture" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/item_image"
                android:layout_toRightOf="@+id/item_image"
                android:fontFamily="@font/poppinsmedium"
                android:text="Pengumpulan File Capstone S2T23"
                android:textColor="@color/RoyalBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_detal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_title"
                android:layout_toEndOf="@+id/item_image"
                android:layout_toRightOf="@+id/item_image"
                android:fontFamily="@font/poppinseegular"
                android:text="Mengingatkan kembali kepada peserta Capstone S2T23 untuk segera mengumpulkan berkas sesuai..."
                android:textColor="@color/SlateGrey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_postdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_toEndOf="@+id/item_image"
                android:layout_toRightOf="@+id/item_image"
                android:fontFamily="@font/poppinsmedium"
                android:text="4 Minutes ago"
                android:textColor="@color/SlateGrey"
                android:textSize="10sp" />

            <View
                android:id="@+id/garis"
                android:layout_width="match_parent"
                android:layout_height="1.4dp"
                android:layout_marginTop="120dp"
                android:alpha="0.3"
                android:background="@color/DarkGrey" />
        </RelativeLayout>

